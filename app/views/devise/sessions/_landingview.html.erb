

  <div class="fixed-top">
<button type="button" class="btn danger-color float-right text-white" data-toggle="modal" data-target="#basicExampleModal">
  Sign up to participate!
  </button>
  </div>
  
  <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body card-body bg-success">
  
    <div class="col-12 align-self-center">
       

              <div class="card-header bg-warning text-white mb-4">
                  Sign in to continue
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
              <div class="d-flex  justify-content-center align-items-center mb-3">
                <%= image_tag("layd.png", :alt => "Layd Logo", :style => "height: 40vh; width: 80vw;") %>
          </div>
         
            <form class="form-signin">
             
            
              
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control mb-2", :placeholder => "Email Address Please", :style => "text-align:center;" %>
              <%= f.password_field :password, autocomplete: "current-password", :class => "form-control mb-4", required: true, :placeholder => "Please Enter Your Password", :style => "text-align:center;" %>
    
              <button class="btn btn-lg btn-primary btn-block mb-1" type="submit">Sign in</button>
              <div class="row justify-content-center align-items-space-around">
                  <button type="button" class="btn btn-git special-color-dark text-white"><i class="fab fa-github pr-1"></i> Github</button>

                  <button type="button" style="background-color:  #2867B2; color: white;"  class="btn btn-li"><i class="fab fa-linkedin-in pr-1" ></i> Linkedin</button>
               
              </div>
                 <% end %>
            
        </div>

      </div>
    </div>
        </div>
      </div>
    </div>
  </div>